<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Pregunta</th>
      <th>Opciones</th>
      <th>Respuesta</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% Object.keys(questions).forEach(category => { %>
      <% questions[category].forEach(question => { %>
        <tr id="question-<%= question.id %>">
          <td><%= question.id %></td>
          <td><%= question.text %></td>
          <td><%= question.options.join(', ') %></td>
          <td><%= question.answer %></td>
          <td>
            <button onclick="editQuestion('<%= category %>', <%= question.id %>)">Editar</button>
            <button onclick="deleteQuestion('<%= category %>', <%= question.id %>)">Eliminar</button>
          </td>
        </tr>
      <% }); %>
    <% }); %>
  </tbody>
</table>
